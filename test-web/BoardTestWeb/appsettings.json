{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "BoardLibrary": {
    "ConnectionString": "Server=localhost;Database=BoardTestDb;Trusted_Connection=true;TrustServerCertificate=true;",
    "FileUpload": {
      "MaxFileSize": 10485760,
      "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx"],
      "StoragePath": "uploads"
    },
    "Pagination": {
      "DefaultPageSize": 20,
      "MaxPageSize": 100
    }
  },
  "TestSettings": {
    "AutoSeedData": true,
    "SeedDataCounts": {
      "Users": 5,
      "Posts": 50,
      "Comments": 200,
      "Files": 20,
      "Questions": 10,
      "Answers": 30
    }
  }
}
